package com.bridgelabz.programming.oops.jsoninventory;

import java.util.ArrayList;
import java.util.List;

import com.BridgeLabz.Programming.Algorithm.Input;

public class Driver {

	public static void main(String[] args) throws Exception {
       
		List<Inventory> array = new ArrayList<>();
		System.out.println("enter number of inventories\n");
		int number = InputUtility.inputInteger();
		double price, weight;
		String name;

		for (int i = 0; i < number; i++) {
			name = InputUtility.inputString();
			price = InputUtility.inputInteger();
			weight = InputUtility.inputInteger();
			Inventory inventorydata = new Inventory();
			inventorydata.setWeight(weight);
			inventorydata.setPrice(price);
			inventorydata.setName(name);

			array.add(inventorydata);

		}
		Jsonfilecreation creation = new Jsonfilecreation();
		creation.writeJsonData(array);
		creation.readJsonData();

	}

}
