package com.bridgelabz.programming.oops.addressbook;

import java.util.ArrayList;

import com.BridgeLabz.Programming.function.InputUtility;

public class Implementing implements Operations{
	
	public Family addFamilyPerson() {
		
		System.out.println("enter the firstname of a person");
		String firstname = InputUtility.inputString();
		System.out.println("enter the lasttname of a person");
		String lastname = InputUtility.inputString();
		System.out.println("enter the address of a person");
		String address = InputUtility.inputString();
		System.out.println("enter the zipcode of a person");
		int zipcode = InputUtility.inputInteger();
		System.out.println("enter the state of a person");
		String state = InputUtility.inputString();
		System.out.println("enter the city of a person");
		String city = InputUtility.inputString();
		System.out.println("enter the phonenumber of a person");
		String phonenumber = InputUtility.inputString();
		
		Family addressbook = new Family(firstname,lastname,address,city,state,zipcode,phonenumber);


		return addressbook;
	}

	public Friend addFriendPerson() {
		
		System.out.println("enter the firstname of a person");
		String firstname = InputUtility.inputString();
		System.out.println("enter the lasttname of a person");
		String lastname = InputUtility.inputString();
		System.out.println("enter the address of a person");
		String address = InputUtility.inputString();
		System.out.println("enter the zipcode of a person");
		int zipcode = InputUtility.inputInteger();
		System.out.println("enter the state of a person");
		String state = InputUtility.inputString();
		System.out.println("enter the city of a person");
		String city = InputUtility.inputString();
		System.out.println("enter the phonenumber of a person");
		String phonenumber = InputUtility.inputString();

		Friend addressbook = new Friend(firstname,lastname,address,city,state,zipcode,phonenumber);

		
		return addressbook;
	}

	public ArrayList<Family> editFamilyCity(ArrayList<Family> addressbook) {

		System.out.println("enter first name of the family person");
		String firstname = InputUtility.inputString();
		System.out.println("enter the city");
		String city = InputUtility.inputString();
		
		for (Family i : addressbook) {
			if (i.getFirstname().contentEquals(firstname)) {
				i.setCity(city);

				break;
			}
		}

		return addressbook;

	}

	public ArrayList<Friend> editFriendCity(ArrayList<Friend> addressbook) {

	
		System.out.println("enter first name of the friend ");
		String firstname = InputUtility.inputString();
		System.out.println("enter the city");
		String city = InputUtility.inputString();
		for (Friend i : addressbook) {
			if (i.getFirstname().contentEquals(firstname)) {
				i.setCity(city);

				break;
			}
		}

		return addressbook;

	}

	public ArrayList<Family> deletFamily(ArrayList<Family> familyarray) throws Exception {

		System.out.println("enter the firstname of the family person");
		String firstname = InputUtility.inputString();

		Family temp = null;

		for (Family i : familyarray) {
			if (firstname.equals(i.getFirstname())) {
				temp = i;
				break;
			}
		}

		familyarray.remove(temp);
		return familyarray;
	}

	public ArrayList<Friend> deletFriend(ArrayList<Friend> friendarray) throws Exception {

		System.out.println("enter the firstname of the friend ");
		String firstname = InputUtility.inputString();
		Friend temp = null;

		for (Friend i : friendarray) {
			if (firstname.equals(i.getFirstname())) {
				temp = i;
				break;
			}
		}

		friendarray.remove(temp);
		return friendarray;

	}

}
